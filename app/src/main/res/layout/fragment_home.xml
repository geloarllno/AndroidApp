<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Guardian Alert Title -->
    <TextView
        android:id="@+id/text_guardian_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardian_alert_title"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"/>

    <!-- Add Device Button -->
    <Button
        android:id="@+id/btn_add_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_guardian_alert"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="57dp"
        android:backgroundTint="#FFD700"
        android:text="@string/add_device"
        android:textColor="@color/black" />

    <!-- Available Devices List -->
    <LinearLayout
        android:id="@+id/layout_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/btn_add_device"
        android:visibility="gone"/>

    <!-- Connected Device Section -->
    <LinearLayout
        android:id="@+id/layout_connected_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout_device_list"
        android:visibility="gone"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_connected_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disconnect_device"
            android:backgroundTint="#FFEB3B"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <!-- ProgressBar overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>