<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Title and Buttons Container -->
    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_test_notification"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_notification"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:contentDescription="@string/test_notification"/>

            <ImageButton
                android:id="@+id/btn_mark_all_read"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_mark_all_read"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:contentDescription="@string/mark_all_read_desc"/>

            <ImageButton
                android:id="@+id/btn_delete_notifications"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete_all"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:contentDescription="@string/delete_all_desc"/>
        </LinearLayout>
    </RelativeLayout>
    
    <!-- Snooze Banner -->
    <LinearLayout
        android:id="@+id/snooze_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerContainer"
        android:layout_marginTop="8dp"
        android:background="#FFF9C4"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/snooze_banner_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/notifications_currently_snoozed"
            android:textColor="#000000"
            android:textSize="14sp" />
            
        <Button
            android:id="@+id/btn_cancel_snooze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_snooze"
            android:textSize="12sp"
            android:minHeight="36dp"
            android:backgroundTint="#FFEB3B"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- SwipeRefreshLayout for refreshing notifications -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/snooze_banner"
        android:layout_marginTop="8dp">

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_notifications"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="visible"/>
            
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- No Notifications Text -->
    <TextView
        android:id="@+id/no_notifications_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_notifications"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"/>

</RelativeLayout>