<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Back Button in Upper Right Corner -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:contentDescription="@string/back_button"
        android:layout_marginBottom="20dp"/>

    <!-- Title -->
    <TextView
        android:id="@+id/txtChangeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_email"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/btnBack"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- Email Input -->
    <EditText
        android:id="@+id/edtNewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_new_email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textSize="16sp"
        android:autofillHints="emailAddress"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_below="@id/txtChangeEmail"/>

    <!-- Update Email Button -->
    <Button
        android:id="@+id/btnUpdateEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_email"
        android:backgroundTint="#FFD700"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_below="@id/edtNewEmail"
        android:layout_marginTop="15dp"
        android:padding="12dp" />

</RelativeLayout>
